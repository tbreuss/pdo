{
    "name": "tebe/pdo",
    "description": "Provides an extension to the native PDO along with additional functionality.",
    "type": "library",
    "keywords": [
        "mysql",
        "pdo",
        "pdo-wrapper",
        "pgsql",
        "postgres",
        "postgresql",
        "sqlite",
        "sql server",
        "sqlserver",
        "sqlsrv"
    ],
    "homepage": "https://github.com/tebe/pdo",
    "license": "MIT",
    "require": {
        "php": ">=8.1",
        "ext-pdo": "*"
    },
    "autoload": {
        "psr-4": {
            "tebe\\pdo\\": "src/"
        }
    },    
    "scripts": {
        "check-coding-standards": "php-cs-fixer fix src --rules=@PER-CS2.0 --dry-run --diff",
        "fix-coding-standards": "php-cs-fixer fix src --rules=@PER-CS2.0 --diff",
        "test": [
            "@check-coding-standards",
            "@php tests/functional.php"
        ]
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.58"
    }
}
